<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import org.controlsfx.control.CheckComboBox?>

<SplitPane stylesheets="@AuctionTool.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.view.AuctionController">
	<items>
		<Accordion fx:id="accordion" maxWidth="250">
			<panes>
				<TitledPane fx:id="titledpane_open" text="Campaigns">
					<GridPane>
						<ComboBox fx:id="campaigns_list" onAction="#campaigns_list_action" value="Select a Campaign" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3" />
						
						<Button fx:id="campaigns_open" onAction="#campaigns_open_action" text="Open" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						<Button fx:id="campaigns_delete" onAction="#campaigns_delete_action" text="Delete" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1" />
						<Button fx:id="campaigns_import" onAction="#campaigns_import_action" text="Import" GridPane.rowIndex="1" GridPane.columnIndex="2" />
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Export">
					<GridPane>
						<ComboBox fx:id="export_list" value="Select an Option" onAction="#export_list_action" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">							<items>
								<FXCollections fx:factory="observableArrayList">
									<String fx:value="Image" />
									<String fx:value="Document" />
									<String fx:value="Data" />
								</FXCollections>
							</items>
							<value>
								<String fx:value="Image" />
							</value>
						</ComboBox>
						
						<Button fx:id="export_save" text="Save" disable="true" onAction="#export_save_action" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						<Button fx:id="export_print" text="Print" disable="true" onAction="#export_print_action" GridPane.rowIndex="1" GridPane.columnIndex="1" />
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Add Series">
					<GridPane>
						<Label text="Gender:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
						<CheckComboBox fx:id="filterGender" GridPane.rowIndex="0" GridPane.columnIndex="1">
							<items>
								<String fx:value="Any" />
								<String fx:value="Male" />
								<String fx:value="Female" />
							</items>
						</CheckComboBox>
						
						<Label text="Age:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						<CheckComboBox fx:id="filterAge" GridPane.rowIndex="1" GridPane.columnIndex="1">
							<items>
								<String fx:value="Any" />
								<String fx:value="less than 25" />
								<String fx:value="25 → 34" />
								<String fx:value="35 → 44" />
								<String fx:value="45 → 54" />
								<String fx:value="more than 55" />
							</items>
						</CheckComboBox>
						
						<Label text="Income:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
						<CheckComboBox fx:id="filterIncome" GridPane.rowIndex="2" GridPane.columnIndex="1">
							<items>
								<String fx:value="Any" />
								<String fx:value="Low" />
								<String fx:value="Medium" />
								<String fx:value="High" />
							</items>
						</CheckComboBox>
						
						<Label text="Context:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
						<CheckComboBox fx:id="filterContext" GridPane.rowIndex="3" GridPane.columnIndex="1">
							<items>
								<String fx:value="Any" />
								<String fx:value="News" />
								<String fx:value="Shopping" />
								<String fx:value="Social Media" />
								<String fx:value="Blog" />
								<String fx:value="Hobbies" />
								<String fx:value="Travel" />
							</items>
						</CheckComboBox>
						
						<Label text="Time Unit:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
						<ComboBox fx:id="filterTime" GridPane.rowIndex="4" GridPane.columnIndex="1">
							<items>
								<FXCollections fx:factory="observableArrayList">
									<String fx:value="Minutes" />
									<String fx:value="Hours" />
									<String fx:value="Days" />
									<String fx:value="Weeks" />
									<String fx:value="Months" />
									<String fx:value="Years" />
								</FXCollections>
							</items>
							<value>
								<String fx:value="Hours" />
							</value>
						</ComboBox>
						
						<Label text="Graph Metrics:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
						<ComboBox fx:id="filterMetrics" GridPane.rowIndex="5" GridPane.columnIndex="1">
						<items>
								<FXCollections fx:factory="observableArrayList">
									<String fx:value="Bounces" />
									<String fx:value="Impressions" />
									<String fx:value="Unique Impressions" />
									<String fx:value="Clicks" />
									<String fx:value="Unique Clicks" />
									<String fx:value="Conversions" />
									<String fx:value="Total Cost" />
									<String fx:value="CTR" />
									<String fx:value="CPA" />
									<String fx:value="CPC" />
									<String fx:value="CPM" />
								</FXCollections>
							</items>
							<value>
								<String fx:value="Bounces" />
							</value>
						</ComboBox>
						
						<Label text="Date from:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
						<DatePicker fx:id="filterDateFrom" GridPane.rowIndex="6" GridPane.columnIndex="1" />
						
						<Label text="Date to:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
						<DatePicker fx:id="filterDateTo" GridPane.rowIndex="7" GridPane.columnIndex="1" />
						
						<Button fx:id="generateGraph" disable="true" onAction="#generateData" text="Add Series" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2" />
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Bounces">
					<GridPane>
						<Label text="Define a Bounce" />
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Series List">
					<GridPane>
						<TableView GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
							<columns>
								<TableColumn text="Name"></TableColumn>
								<TableColumn text="Points"></TableColumn>
							</columns>  
						</TableView>
						
						<Button fx:id="series_add" text="Add" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						<Button fx:id="series_remove" text="Remove" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1" />
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Axis">
					<GridPane>
						<Label text="X Axis" GridPane.rowIndex="0" GridPane.columnIndex="0" />
						<Label text="Logarithmic" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						<CheckBox fx:id="axis_x_logarithmic" disable="true" GridPane.rowIndex="1" GridPane.columnIndex="1" />
						
						<Label text="Y Axis" GridPane.rowIndex="2" GridPane.columnIndex="0" />
						<Label text="Histogram" GridPane.rowIndex="3" GridPane.columnIndex="0" />
						<CheckBox fx:id="axis_y_histogram" disable="true" GridPane.rowIndex="3" GridPane.columnIndex="1" />
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Metrics">
					<GridPane>
						<TableView GridPane.rowIndex="0" GridPane.columnIndex="0">
							<columns>
								<TableColumn text="Metric"></TableColumn>
								<TableColumn text="Value"></TableColumn>
							</columns>  
						</TableView>
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Raw Data">
					<GridPane>
						<TableView GridPane.rowIndex="0" GridPane.columnIndex="0">
							<columns>
								<TableColumn text="X Axis"></TableColumn>
								<TableColumn text="Y Axis"></TableColumn>
							</columns>  
						</TableView>
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Preferences">
					<GridPane>
						<Label text="Colour Scheme" GridPane.rowIndex="0" GridPane.columnIndex="0" />
						<Label text="Font Size" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						<Label text="Currency Unit" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
					</GridPane>
				</TitledPane>
				
				<TitledPane text="Help">
						<GridPane>
							<Label text="Todo" GridPane.rowIndex="0" GridPane.columnIndex="0" />
							
							<Label text="Created by Group 3" GridPane.rowIndex="1" GridPane.columnIndex="0" />
						</GridPane>
				</TitledPane>
			</panes>
		</Accordion>
		<LineChart fx:id="lineChart">
			<xAxis><CategoryAxis side="BOTTOM" /></xAxis>
			<yAxis><NumberAxis side="LEFT" /></yAxis>
		</LineChart>
	</items>
</SplitPane>
